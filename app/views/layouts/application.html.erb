<!DOCTYPE html>
<html>
<head>
  <title>To-doodling</title>
  <%= stylesheet_link_tag 'application', media:'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Pacifico|Varela+Round|Permanent+Marker' rel='stylesheet' type='text/css'>
</head>
<body>

  <%= render "shared/navbar" %>

  <% flash.each do |type, message| %>
  <div class="alert <%= alert_class_for(type) %> alert-dismissible fade in">
    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
    <%= message %>
  </div>
<% end %>

<%= yield %>

<%= render "shared/footer" %>

</body>
</html>
