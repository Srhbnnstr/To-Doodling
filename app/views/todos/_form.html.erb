<%= form_for @todo do |f| %>
  <%= f.text_field :title, placeholder: "Task"%>
  <%= f.text_field :date_due, class: "datepicker" %>
  <%= f.time_select :time_due, placeholder: "Sarts at"%>
  <%= f.submit "Submit" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
