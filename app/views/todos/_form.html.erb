<%= simple_form_for @todo, url: list_todos_path do |f| %>
  <h5><strong>Task</strong></h5><%= f.text_field :title, placeholder: "Task" %>
  <h5><strong>Date Due</strong></h5><%= f.text_field :date_due, class: "datepicker" %>
  <h5><strong>Time Due</strong></h5><%= f.time_field :time_due, placeholder: "Sarts at"%>
  <%= f.submit "Submit" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
