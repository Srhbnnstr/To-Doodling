<div class="col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-1 col-lg-8 col-lg-offset-1" style="padding-left:0px">
  <div class="container-fluid">
    <h1>My Lists<%= image_tag("pencil-gif.gif", class: "pencil img-responsive") %></h1>
  </div>
</div>
<br><br>
<div class="col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-lg-10">
  <div class="lists container-fluid">
    <% if @lists.empty? %>
        <p>You have no lists at the moment.</p><hr>
    <% else %>
      <% @lists.each do |t|%>
        <%= link_to "#{t.list_title}", list_path(t) %><hr>
      <% end %>
    <% end %>
    <%= button_to "Add List", new_list_path, :method => "get", class: "btn btn-small btn-primary", id: "listBtn" %>
  </div>
</div>
