<div class="col-md-6">
  <div class="row">
  <% if current_user %>
      <th><h1><%= @list.list_title %></h1></th>
      <hr>
      <h1><%= @list.todos.each do |todo| %></h1>
      <p><%= "#{todo.title}" %></p>
      <% end %>
    </div>
    <% else %>
      <div class="container">
        <h4>You're not authorized to view this list</h4>
      </div>
    <% end %>
  </div>
<% if current_user%>
  <%= button_to "Edit", edit_list_path(@list), :method => "get", class: "btn btn-small btn-success"%></div>
  <%= button_to "Delete List", (@list), data: {:confirm=>'Are you sure you want to delete this list?'}, :method => :delete, class: "btn btn-small btn-danger" %></div>
  <%= button_to "Add Task", new_todo_path(@todo), :method => "get", class: "btn btn-small btn-primary" %></div>
<% end %>
