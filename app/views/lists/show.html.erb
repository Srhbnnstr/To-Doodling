<div class="col-xs-offset-1 col-sm-4 col-sm-offset-2 col-md-6 col-md-offset-2 col-lg-6 col-lg-offset-2">
  <div class="container">
    <% if current_user %>
        <h2><%= @list.list_title %></h2>
    </div>
  </div>
  <br>
  <div class="col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-lg-10">
    <div class="todos container-fluid">
    <% if @list.todos.empty? %>
        <p>You haven't created any tasks yet.</p>
            <% else %>
            <% @list.todos.each do |t| %>
              <li>
                <input type="checkbox" id="cbox1">
                <label class="todoItem"><%= h "#{t.title}" %></label><hr>
              </li>
          <% end %>
      <% end %>
      <%= button_to "Add Task", new_list_todo_path(@list), :method => "get", class: "btn btn-small btn-primary" %><br>
      <%= link_to "Edit List", edit_list_path(@list), :method => "get" %>
      <%= link_to "Delete List", (@list), data: {:confirm=>'Are you sure you want to delete this list?'}, :method => :delete %>
    </div>
<% end %>
